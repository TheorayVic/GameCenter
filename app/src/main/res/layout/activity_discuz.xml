<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5553BECB"
    android:orientation="vertical"
    tools:context="com.alkv.ljw.actions.DiscuzActivity">
    <WebView
        android:id="@+id/discuz_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#5553BECB"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/discuz_webview_btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4FB6C8"
            android:text="后退"/>

        <Button
            android:id="@+id/discuz_webview_btn_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4FB6C8"
            android:text="前进"/>

        <Button
            android:id="@+id/discuz_webview_btn_bigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4FB6C8"
            android:text="放大"/>

        <Button
            android:id="@+id/discuz_webview_btn_smaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4FB6C8"
            android:text="缩小"/>
    </LinearLayout>


</LinearLayout>
